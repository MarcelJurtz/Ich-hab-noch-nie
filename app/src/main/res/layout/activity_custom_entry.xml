<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jurtz.android.ichhabnochnie.customEntryActivity"
    android:background="@color/colorMainBackground"
    android:id="@+id/customEntryActivityLayout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCustomEntry"
        android:layout_marginTop="136dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:hint="Neuen Eintrag hinzufügen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einfügen"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/cmdCustomEntryEnter"
            android:textColor="@color/textColor"
            android:background="@drawable/startbutton"
            android:textSize="16dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zurück"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/cmdCustomEntryCancel"
            android:textColor="@color/textColor"

            android:textSize="16dp"
            android:background="@drawable/startbutton"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/lblCustomEntryInfo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:textColor="@color/textColor" />
</RelativeLayout>
