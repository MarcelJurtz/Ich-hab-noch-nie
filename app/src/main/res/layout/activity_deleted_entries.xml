<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeletedEntriesActivity"
    android:orientation="vertical"
    android:background="@color/colorMainBackground"
    android:id="@+id/llDeletedEntriesMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Gelöschte Einträge:"
        android:id="@+id/lblDeletedEntriesCaption"
        android:textSize="24dp"
        android:textColor="@color/colorMainForeground"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:id="@+id/svDeletedEntries">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llDeletedTexts"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Zurück"
        android:id="@+id/cmdDeletedEntriesReturn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:textColor="@color/textColor"
        android:background="@drawable/startbutton"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" />

</LinearLayout>
