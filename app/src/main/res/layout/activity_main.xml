<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorMainBackground"
    tools:context="com.jurtz.android.ichhabnochnie.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmdMainIcon"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:src="@drawable/logo_rund_180" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eigene Texte verwenden"
        android:textColor="@color/textColor"
        android:id="@+id/chkUserMessages"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140sp"
        android:layout_marginLeft="70sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standardtexte verwenden"
        android:textColor="@color/textColor"
        android:id="@+id/chkSystemMessages"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90sp"
        android:layout_marginLeft="70sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eigenen Eintrag hinzufÃ¼gen"
        android:textSize="15sp"
        android:background="@drawable/startbutton"
        android:textColor="@color/textColor"
        android:id="@+id/cmdAddCustomMessage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_marginBottom="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="70sp"
        android:background="@drawable/startbutton"
        android:id="@+id/cmdPlay"
        android:textColor="@color/textColor"
        style="?android:attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp" />

</RelativeLayout>
